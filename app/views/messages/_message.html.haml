.main-chat__message-list__massage{data: {message: {id: message.id}}}
  .main-chat__message-list__massage__upper-info
    %p.main-chat__message-list__massage__upper-info__talker
      = message.user.name
    %p.main-chat__message-list__massage__upper-info__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  %p.main-chat__message-list__massage__text
    - if message.content.present?
      = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
  